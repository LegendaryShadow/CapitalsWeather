<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#2196F3"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/hiTempText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="86째F" />

            <TextView
                android:id="@+id/cityStateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Orland Park, IL" />

            <TextView
                android:id="@+id/loTempLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lo_label"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/loTempText"
                app:layout_constraintEnd_toEndOf="@+id/hiTempLabel"
                app:layout_constraintStart_toStartOf="@+id/hiTempLabel" />

            <TextView
                android:id="@+id/precipLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/precip_label"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/precipText"
                app:layout_constraintEnd_toEndOf="@+id/loTempLabel"
                app:layout_constraintStart_toStartOf="@+id/loTempLabel" />

            <TextView
                android:id="@+id/feelsLikeTempText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/currentTempText"
                app:layout_constraintStart_toEndOf="@+id/currentTempText"
                tools:text="Feels Like 75째F" />

            <TextView
                android:id="@+id/hiTempLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="@string/hi_label"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/hiTempText"
                app:layout_constraintEnd_toStartOf="@+id/hiTempText" />

            <TextView
                android:id="@+id/precipText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/loTempText"
                app:layout_constraintTop_toBottomOf="@+id/loTempText"
                tools:text="1%" />

            <TextView
                android:id="@+id/loTempText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/hiTempText"
                app:layout_constraintTop_toBottomOf="@+id/hiTempText"
                tools:text="57째F" />

            <TextView
                android:id="@+id/currentTempText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/cityStateText"
                app:layout_constraintTop_toBottomOf="@+id/cityStateText"
                tools:text="75째F" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>